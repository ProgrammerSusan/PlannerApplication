<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="18dp"
        android:text="Event Name"
        android:id="@+id/nameLabel"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventName"
        android:layout_toRightOf="@id/nameLabel"
        android:textSize="18dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="18dp"
        android:text="Event Time"
        android:id="@+id/timeLabel"
        android:layout_below="@id/nameLabel"
        android:layout_marginTop="20dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventTimeH"
        android:layout_toRightOf="@id/timeLabel"
        android:layout_below="@id/eventName"
        android:layout_marginTop="20dp"
        android:textSize="18dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventTimeM"
        android:layout_toRightOf="@id/eventTimeH"
        android:layout_below="@id/eventName"
        android:layout_marginTop="20dp"
        android:textSize="18dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="18dp"
        android:text="Event Date"
        android:id="@+id/dateLabel"
        android:layout_below="@id/timeLabel"
        android:layout_marginTop="20dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventMonth"
        android:layout_toRightOf="@id/dateLabel"
        android:layout_below="@id/eventTimeH"
        android:layout_marginTop="20dp"
        android:textSize="18dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventDay"
        android:layout_toRightOf="@id/eventMonth"
        android:layout_below="@id/eventTimeH"
        android:layout_marginTop="20dp"
        android:textSize="18dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventYear"
        android:layout_toRightOf="@id/eventDay"
        android:layout_below="@id/eventTimeM"
        android:layout_marginTop="20dp"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeLabel"
        android:layout_marginTop="115dp"
        android:onClick="save"
        android:text="SAVE"
        android:textSize="20dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeLabel"
        android:layout_toRightOf="@id/save"
        android:layout_marginTop="115dp"
        android:onClick="delete"
        android:text="DELETE ALL EVENTS"
        android:textSize="20dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeLabel"
        android:layout_toRightOf="@id/delete"
        android:layout_marginTop="115dp"
        android:onClick="back"
        android:text="BACK"
        android:textSize="20dp" />

</RelativeLayout>